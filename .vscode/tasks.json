{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "dlbioexample:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug current",
			"dependsOn": [],
			"dockerRun": {
				"image": "dl_workingdir",
				"volumes": [
					{
						"localPath": "${workspaceFolder}",
						"containerPath": "/workingdir:rw\" --gpus all --user $(id -u):$(id -g) --label \"",
						"permissions": "rw"
					},
				],
				"containerName": "dl",
				"ports": [
					{
						"containerPort": 8889,
						"hostPort": 8889,
					}
				]
			},
			"python": {
				// For starting the currently in the editor selected file:
				"file": "${relativeFile}",
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug general",
			"dependsOn": [],
			"dockerRun": {
				"image": "dl_workingdir",
				"volumes": [
					{
						"localPath": "${workspaceFolder}",
						"containerPath": "/workingdir:rw\" --gpus all --user $(id -u):$(id -g) --label \"",
						"permissions": "rw"
					},
				],
				"containerName": "dl",
				"ports": [
					{
						"containerPort": 8889,
						"hostPort": 8889,
					}
				]
			},
			"python": {
				// For starting the programs main file:
				"file": "run_training.py",
			}
		}
	]
}